<?xml version="1.0" encoding="utf-8"?>

<resources>


    <style name="AppCompat.Day"  parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/material_red_2_primary</item>
        <item name="colorPrimaryDark">@color/material_red_2_primary_dark</item>
        <item name="colorAccent">@color/material_azure_ld_pimary_dark</item>


        <item name="colorDialogBackground">?android:attr/colorBackground</item>

        <item name="android:colorBackground">@color/grey_30</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="listItemColor">@color/grey_08</item>

        <item name="android:textColor">@color/grey_200</item>
        <item name="textColorStrong">@color/grey_235</item>
        <item name="textColorDim">@color/grey_145</item>
        <item name="textColorLink">?attr/colorPrimaryDark</item>

        <item name="previewPlaceHolder">@color/grey_40</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="colorControlHighlight">?attr/colorAccent</item>

    </style>


    <style name="AppCompat.Night"  parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/material_azure_ld_primary</item>
        <item name="colorPrimaryDark">@color/material_azure_ld_pimary_dark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="colorDialogBackground">?android:attr/colorBackground</item>

        <item name="android:windowBackground">@color/grey_235</item>
        <item name="android:colorBackground">@color/grey_215</item>

        <item name="listItemColor">@color/grey_235</item>

        <item name="android:textColor">@color/grey_30</item>
        <item name="textColorStrong">@color/grey_l5</item>
        <item name="textColorDim">@color/grey_60</item>
        <item name="textColorLink">?attr/colorPrimaryDark</item>

        <item name="previewPlaceHolder">@color/grey_210</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="colorControlHighlight">?attr/colorAccent</item>

    </style>

    <style name="smoothProgress" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">8dp</item>
        <item name="spb_stroke_width">5dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">1.6</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_color">?android:attr/colorBackground</item>
        <item name="spb_progressiveStart_activated">false</item>
        <item name="spb_generate_background_with_colors">false</item>
    </style>


</resources>
